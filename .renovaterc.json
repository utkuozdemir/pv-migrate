{
  "extends": [
    "config:recommended",
    ":automergeBranch",
    ":automergeMinor",
    ":automergeDigest",
    ":semanticCommitTypeAll(chore)"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "go"
      ],
      "groupName": "go packages"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "docker images"
    },
    {
      "extends": [
        ":automergeMajor"
      ],
      "matchFileNames": [
        ".github/workflows/**"
      ],
      "groupName": "github actions"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "\\.github\\/workflows\\/.*"
      ],
      "matchStrings": [
        "# renovate: depName=(?<depName>[^\\s]+)( datasource=(?<datasource>[^\\s]+))?( registryUrl=(?<registryUrl>\\S+))?\\n[^\\n]*?(?<currentValue>v?\\d+\\.\\d+\\.\\d+(-[\\S]+)?)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-tags{{/if}}",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "go.mod",
        "\\.github\\/workflows\\/.*"
      ],
      "matchStrings": [
        "(#|\\/\\/) renovate: go\\n[^\\n]*?(?<currentValue>v?\\d+\\.\\d+(\\.\\d+(-[\\S]+)?)?)"
      ],
      "depNameTemplate": "golang/go",
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^go(?<version>\\d+\\.\\d+\\.\\d+)$"
    }
  ]
}
